#include <iostream>
#include <cmath>
using namespace std;

int division (int n1, int n2)
{
	int c;
	while (n1!=n2)
	{
		if (n1>n2)
		n1=n1-n2;
		else
		n2=n2-n1;
	}
}

int main()
{
	int n1, n2;
	cout<<"Este programa te da el maximo comun denominador de dos numeros"<<endl;
	cout<<"Dame un numero"<<endl;
	cin>>n1;
	cout<<"Dame otro numero"<<endl;
	cin>>n2;
	int mcd = division(n1, n2);
	cout<<"Tu maximo comun divisor es "<<mcd<<endl;
	return 0;
}
